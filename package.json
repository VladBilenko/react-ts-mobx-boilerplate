{
  "name": "react-ts-mobx-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "mobx": "^5.6.0",
    "mobx-react": "^5.3.6",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0"
  },
  "scripts": {
    "start": "npm-run-all -p fix watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "lint": "tslint --project . --fix",
    "sass-lint": "sass-lint --config ./sass-lint.yml -v -q",
    "sass-lint-fix": "sass-lint-auto-fix --config ./sass-lint.yml",
    "prettier": "prettier --parser typescript --single-quote --trailing-comma=es5 --print-width 120 --write \"./**/*.ts\" \"./**/*.tsx\"",
    "fix": "npm-run-all prettier sass-lint-fix",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "build-js": "react-scripts-ts build",
    "commit-hook": "git add ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix && npm run lint && npm run sass-lint && npm run commit-hook"
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.7",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "husky": "^1.1.4",
    "node-sass": "^4.10.0",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.2",
    "sass-lint": "^1.12.1",
    "sass-lint-auto-fix": "^0.15.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
